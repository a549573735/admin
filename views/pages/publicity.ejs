<% include ../common/header.ejs %>

<div class="c-content o-pad" id="c-content">
    <div class="clearfix">
       <% include ../common/leftNav.ejs %>
         <div class="c-r" id="app">
                <form class="form-horizontal clearfix"  onsubmit="return false;">
                    <div class="clearfix">
                        <div class="col-md-12">
                            <div class="form-group clearfix">
                                <label class="col-md-2 o-pd v-label" >公示时间:</label>
                                <div class="col-md-5 o-pd">
                                    <div class="input-daterange input-group" data-date-format="mm/dd/yyyy">
                                        <input class="form-control" type="text"  name="from" placeholder="开始时间">
                                        <span class="input-group-addon">~</span>
                                        <input class="form-control" type="text" name="to" placeholder="结束时间">
                                    </div>
                                </div>

                            <label class="col-md-1 o-pd v-label-l text-center" for="">类型:</label>
                                <div class="col-md-2 o-pd-l">
                                    <select class="form-control" name="type"  id="selectType" >
                                        <option value="COMPANY">请选择</option>
                                      
                                        <option value="PARK">园区</option>
                                        <option value="COMPANY">企业</option>
                                        
                                    </select>
                                </div>
                            </div>

                            <div class="form-group" >
                              <% if(user.content.type!="PARK"){%>
                                <v-select ></v-select>
                              <%}%>  
                                <label class="col-md-1 o-pd v-label-s text-center" for="val-skill">企业:</label>
                                <div class="col-md-2 o-pd-l">
                                    <input class="form-control" name="company">
                                </div>

                                <div class="v-t-b">
                                    <button class="btn btn-md btn-primary btn-block inspect_btn" @click="getContent()" type="submit">查询</button>
                                </div>
                                
                            </div>
                             <% if(user.content.btnPermissions.publicity){%>
                                        <div class="v-t-b" >
                                            <button class="btn btn-md btn-primary btn-block inspect_btn" data-target="#modal-publicity" data-toggle="modal" type="submit">新增公示</button>
                                        </div>
                                 <%}%> 
                        </div>
                    </div>
                </form>

                <div class="row v-table">
                    <div class="col-md-12">
                        <div class="block" id="c-table-checkbox">
                            <com-table-list :datalist="dataList"></com-table-list>
                        </div>
                    </div>
                </div>

                <v-pages :pagelist="dataList.content.page||1"> </v-pages>

                <div class="modal fade " id="modal-publicity" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog  ">
        <div class="modal-content">
            <div class="modal-header o-nobor">
                <button type="button" class="close v-tabs-close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">

                       <div class="block-content block-content-narrow">

                                    <div class="js-validation-bootstrap form-horizontal" >
                                     <v-select-admin></v-select-admin>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label " for="val-password">公司: <span class="text-danger">*</span></label>
                                              <div class="col-md-7">
                                                          <select class="form-control" id="publicity-select"  name="modal-publicity">
                                                                     <option >请选择</option>
                                                                     <option  v-for="item in companySelect" :value="item.id" >{{item.name}}</option>
                                                          </select>
                                              </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label" for="val-password">公示 <span class="text-danger">*</span></label>
                                            <div class="col-md-7">
                                                <input class="form-control val-publicity" type="text" name="val-password" >
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-md-3 control-label " for="val-password">备注: <span class="text-danger">*</span></label>
                                            <div class="col-md-7">
                                                <input class="form-control notes-publicity" type="text" name="publicity-notes" >
                                            </div>
                                        </div>
                                       
                                        <div class="form-group">
                                            <div class="col-md-8 col-md-offset-3">
                                                <button class="btn btn-sm btn-primary v-btn-w  model-add-publicity" @click="addPublicity()" >提交</button>
                                            </div>
                                        </div>
                                      
                                    </div>
                                </div>
            </div>
        </div>
    </div>
</div>
          </div>
    </div>
</div>


